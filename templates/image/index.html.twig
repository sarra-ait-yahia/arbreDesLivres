{% extends 'LivreBase.html.twig' %}

{% block centre %}
    <h5>Les images</h5>
    <div class="corps" style="width:90%; font-family:Spinner; font-size:20px;">
        {% for image in images %}

            <p style=" text-align:center; float:left;"> <div class="cercle"></div> &nbsp; <b style="color:rgb(219,91,67);"> {{ image.nom }}: </b>
            <b> <a href="{{ path('image_show', {'idLivre': livre.id,'id': image.id}) }}" target="_blank"  style="display:inline-block;float:right;"> Voir l'image </a> </b></p>
            <p> &nbsp; &nbsp; &nbsp; Ajouté le {{ image.dateEcriture|date ('Y-m-d à  H:i') }} par {{ image.auteurNom }}&nbsp;{{ image.auteurPrenom }} </p>
        {% else %}
            <br> <b style="width:80%;height:100px; margin-left:430px; font-size:20px;">Aucune image n'a été ajouté</b>
        {% endfor %}
        <br> <br>
        <b class="paginate"> {{ knp_pagination_render(images) }}
        </b>
    </div>
    <button class="btnUser" style="margin-left:480px; margin-bottom:80px;background-color:rgb(241,239,240);"><a href="{{ path('showLivre', {'id': livre.id}) }}" >Retour à l'arbre du livre</a> </button>

{% endblock %}


