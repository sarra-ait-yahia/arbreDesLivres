<form method="post" action="{{ path('reponse_delete', {'id': reponse.id,'idLivre':reponse.idLivre.id,'idQuestion':reponse.idQuestion.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette réponse  ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
    <button class="btnUser" style="width:150px;font-size:18px; margin-left:-20px; height:25px;">Supprimer</button>
</form>
