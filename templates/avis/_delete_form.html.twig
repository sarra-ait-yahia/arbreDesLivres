<form method="post" action="{{ path('avis_delete', {'id': avi.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cet avis?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
    <button class="btnUser" style="width:150px;font-size:18px; margin-left:-20px;">Supprimer</button>
</form>
