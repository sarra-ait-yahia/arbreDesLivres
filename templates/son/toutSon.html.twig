{% extends 'indexBase.html.twig' %}

{% block centre %}
    <h5>Les fichiers audio</h5>
    <div class="corps" style="width:90%; font-family:Spinner; font-size:20px;"> <br>
        {% for son in sons %}

            <p style=" text-align:center; float:left;"> <div class="cercle"></div> &nbsp; <b style="color:rgb(219,91,67);"> {{ son.nom }} </b> <b> <a href="{{ path('son_show', {'idLivre': son.idLivre.id,'id': son.id}) }}" target="_blank"  style="display:inline-block;float:right;"> Ecouter cette musique </a> </b></p>
            <p style="margin-left:30px;">Ajouté le {{ son.dateEcriture|date ('Y-m-d à  H:i') }} par {{ son.auteurNom }}&nbsp;{{ son.auteurPrenom }}</p>
            <p> &nbsp; &nbsp; &nbsp; <b> Titre du livre: </b>  {{ son.idLivre.titre }}</p>
            <p style="float:left; margin-top:0px;"">&nbsp; &nbsp; &nbsp;<b> Description du fichier: </b>  {{ son.description}} </p>
            <b style="float:right;">{{ include('son/_delete_form.html.twig') }}</b> </p> <br> <br> <br> <br>

        {% else %}
            <br> <b style="width:80%;height:100px; margin-left:420px; font-size:20px;">Aucun fichier audio n'a été ajouté</b>
        {% endfor %}
        <br> <br>
        <b class="paginate"> {{ knp_pagination_render(sons) }}
        </b>
    </div>
    <button class="btnUser" style="margin-left:480px; margin-top:50px; margin-bottom:80px;background-color:rgb(241,239,240); height:50px;"> <a href="{{ path('voir_tous') }}">Retour à la liste de gestion des éléments</a></button>

{% endblock %}


