{% extends 'LivreBase.html.twig' %}

{% block centre %}
    <h5>Les conseils </h5>
    {% for conseil in conseils %}
        <div class="corps2">
            <div class="bandeauPetit"> <b>Ajouté le {{ conseil.dateEcriture|date ('Y-m-d à  H:i') }}  par {{ conseil.RapporteurNom }}&nbsp;{{ conseil.RapporteurPrenom }}</b></div>

            <div class = "LeText">{{ conseil.conseilText|nl2br }} </div>
        </div>
    {% else %}
        <div class="corps2" style="width:80%;height:100px; text-align:center; font-size:20px;">
            <br> <b>Aucun conseil n'a été ajouté.</b>
        </div>
    {% endfor %}
    <br> <br>
    <b class="paginate"> {{ knp_pagination_render(conseils) }}
    </b>
    <button class="btnUser" style="margin-left:480px;margin-top:50px; margin-bottom:80px;background-color:rgb(241,239,240);"><a href="{{ path('showLivre', {'id': livre.id}) }}" >Retour à l'arbre du livre</a> </button>

{% endblock %}
