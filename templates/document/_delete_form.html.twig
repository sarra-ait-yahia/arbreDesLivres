<form method="post" action="{{ path('document_delete', {'id': document.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer ce document?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
    <button class="btnUser" style="width:150px;font-size:18px; margin-left:-20px; height:25px;">Supprimer</button>
</form>
