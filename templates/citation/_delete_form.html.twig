<form method="post" action="{{ path('citation_delete', {'id': citation.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette citation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ citation.id) }}">
    <button class="btnUser" style="width:150px;font-size:18px; margin-left:-20px;">Supprimer</button>
</form>
