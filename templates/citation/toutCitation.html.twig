{% extends 'indexBase.html.twig' %}

{% block centre %}
    <h5>Les citations </h5>
    {% for citation in citations %}
        <div class="corps2">
            <div class="bandeauPetit"> <b>Ajouté le {{ citation.dateEcriture|date ('Y-m-d à  H:i') }}  par {{ citation.rapporteurNom }}&nbsp;{{ citation.rapporteurPrenom }}</b></div>
            <div class="zoneDeux"><b>Nom de l'auteur :</b> {{ citation.auteur }} </div>
            <div class = "LeText">" &nbsp; {{ citation.text|nl2br }} &nbsp; "<br> <br> <b> Titre du livre: </b> <br> {{ citation.idLivre.titre }} <br> <br>
            {{ include('citation/_delete_form.html.twig') }}
        </div>
        </div>
        {% else %}
            <div class="corps2" style="width:80%;height:100px; text-align:center; font-size:20px;">
                <br><b>Aucune citation n'a été ajouté.</b>
            </div>
        {% endfor %}
    <br> <br>
    <b class="paginate"> {{ knp_pagination_render(citations) }}
    </b>
    <button class="btnUser" style="margin-left:480px; margin-top:50px; margin-bottom:80px;background-color:rgb(241,239,240); height:50px;"> <a href="{{ path('voir_tous') }}">Retour à la liste de gestion des éléments</a></button>

        {% endblock %}
