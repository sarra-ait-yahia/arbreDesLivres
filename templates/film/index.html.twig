{% extends 'LivreBase.html.twig' %}

{% block centre %}
    <h5>La liste des films </h5>
    {% for film in films %}
        <div class="corps2">
            <div class="bandeauPetit"> <b>Ajouté le {{ film.dateEcriture|date ('Y-m-d à  H:i') }}  par {{ film.RapporteurNom }}&nbsp;{{ film.RapporteurPrenom }}</b></div>
            <div class = "zoneDeux">
                <b>{{ film.intitule }}</b>
            </div>
            <div class = "LeText">{{ film.resume|nl2br }} <br><br>
                <b> Réalisateur du film: </b>{{ film.realisateur }}</a>  <br>
                <b> Année de production: &nbsp;</b> {{ film.annee |date ('Y-m-d') }}</div>
        </div>
    {% else %}
        <div class="corps2" style="width:80%;height:100px; text-align:center; font-size:20px;">
            <br> <b>Aucun titre de film n'a été ajouté.</b>
        </div>
    {% endfor %}
    <br> <br>
    <b class="paginate"> {{ knp_pagination_render(films) }}
    </b>
    <button class="btnUser" style="margin-left:480px;margin-top:50px; margin-bottom:80px;background-color:rgb(241,239,240);"><a href="{{ path('showLivre', {'id': livre.id}) }}" >Retour à l'arbre du livre</a> </button>

{% endblock %}
